<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/btnRadius"/>
            <solid android:color="@color/colorBtnPressed"/>
            <padding
                android:top="@dimen/btnPadding"
                android:bottom="@dimen/btnPadding"
                android:left="@dimen/btnPadding"
                android:right="@dimen/btnPadding"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/btnRadius"/>
            <solid android:color="@color/colorBtnNormal"/>
            <padding
                android:top="@dimen/btnPadding"
                android:bottom="@dimen/btnPadding"
                android:left="@dimen/btnPadding"
                android:right="@dimen/btnPadding"/>
        </shape>
    </item>
</selector>